    <!-- DONOR FORM -->

    <section id="donorlogin">
        <h1 style="text-align: center;color: brown;">Donate Blood</h1><br>
        <form name="donateform" onsubmit="return ValidationForm()" method="post">
            <div class="form-group">
                <label for="exampleInputName1">Name</label>
                <input type="text" class="form-control" name = "dname" id="exampleInputName1" required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1">Age</label>
                <input type="number" class="form-control" id="exampleInputText1"  name = "age" placeholder="Donor must be 18 - 65 years old " required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1">Weight</label>
                <input type="number" class="form-control" id="exampleInputText1" name="weight" placeholder="Minimum should be 50kg  " required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1"> Blood Group</label>
                <br>
                    <select id="cars" name="bgrp">
                        <option value="O+">O+</option>
                        <option value="A+">A+</option>
                        <option value="B+">B+</option>
                        <option value="AB+">AB+</option>
                        <option value="A-">A-</option>
                        <option value="O-">O-</option>
                        <option value="B-">B-</option>
                        <option value="AB-">AB-</option>
                    </select> 
            </div>
            <div class="form-group">
                <label for="exampleInputText1">When is the last time you've donated blood</label>
                <br>
                    <select id="cars" name="lastdonation">
                        <option value="Never">Never</option>
                        <option value="less6">less than 6 months</option>
                        <option value="lessyear">less than a year</option>
                        <option value="morethan">More than a year</option>
                    </select>
            </div>
            <div class="form-group">
                <span>Do you have Any Disease ?</span>
<label for="chkYes">
    <input type="radio" id="yes" name="checkdisease" onclick="EnableDisableTextBox()" />
    Yes
</label>
<label for="chkNo">
    <input type="radio" id="no" name="checkdisease" onclick="EnableDisableTextBox()" />
    No
</label>
<br/>
<label for="diseaseInputName1">If Yes,Mention your disease name</label><br>
<input type="text" id="disease" disabled="disabled" />
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" required>
            </div>
           
            <div class="form-group">
                <label for="exampleInputPhoneno1">Phone No</label>
                <input type="tel" name="phone" class="form-control" pattern="[0-9]{10}" id="exampleInputPhoneno1" required>
            </div>
            <div class="form-group">
                <label for="exampleInputLocation1">Location</label>
                <input type="text" name="location" class="form-control"  id="exampleInputLocation1" required>
            </div>
            
            

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>

    <script>

function ValidationForm() {
        let name = document.forms["donateform"]["dname"];
        let age = document.forms["donateform"]["age"];
        let phone = document.forms["donateform"]["phone"];
        let location = document.forms["donateform"]["location"];
        let email = document.forms["donateform"]["email"];
        if(name.value == "") {
          alert("Please enter your name.");
          name.focus();
          return false;
        }
        if(age.value < 18 && age.value > 65 ) {
          alert("Not eligible to donate");
          age.focus();
          return false;
        }
        if(weight.value < 50) {
          alert("Underweight to donate.");
          weight.focus();
          return false;
        }
        if(email.value.indexOf(".", 0) < 0) {
          alert("Please enter a valid e-mail address.");
          email.focus();
          return false;
        }
        if(phone.value == "") {
          alert("Please enter your phone number.");
          phone.focus();
          return false;
        }
        if(location.value == "") {
          alert("Please enter your location");
          location.focus();
          return false;
        }
        

        return true;

      }
      function EnableDisableTextBox() {
        var yes = document.getElementById("yes");
        var disease = document.getElementById("disease");
        disease.disabled = yes.checked ? false : true;
        if (!disease.disabled) {
            disease.focus();
        }
    }

    </script>


